<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/background_gradient"
    android:fitsSystemWindows="true">


    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="550dp"
        android:layout_marginTop="-50dp"
        app:cardCornerRadius="30dp">


        <LinearLayout
            android:id="@+id/pengguna"
            android:layout_width="370dp"
            android:layout_height="600dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">


            <EditText
                android:id="@+id/namapengguna"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp"
                android:hint="Nama User"
                android:padding="15dp"
                android:textSize="15sp" />

            <EditText
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp"
                android:hint="Kategori Sampah"
                android:padding="15dp"
                android:textSize="15sp" />

            <EditText
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp"
                android:hint="Masukkan Tanggal"
                android:padding="15dp"
                android:textSize="15sp" />

            <EditText
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp"
                android:hint="Alamat Bank Sampah"
                android:padding="15dp"
                android:textSize="15sp" />

            <EditText
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp"
                android:hint="Masukkan Nomor Hp Anda"
                android:padding="15dp"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:paddingLeft="50dp"
            android:gravity="center">

            <EditText
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="-35dp"
                android:layout_marginTop="15dp"
                android:drawablePadding="10dp"
                android:hint="Berat (KG)"
                android:paddingLeft="40dp"
                android:textSize="13sp" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:drawablePadding="10dp"
                android:hint="Harga (Per KG)"
                android:paddingLeft="35dp"
                android:textSize="13sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-100dp"
        android:backgroundTint="@color/darkgreen"
        android:onClick="onLoginClicked"
        android:text="Jual Sekarang"
        android:textSize="18sp" />


</LinearLayout>
